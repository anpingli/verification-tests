{
    "apiVersion": "apps/v1",
    "kind": "DaemonSet",
    "metadata": {
        "labels": {
            "component": "collector-buffer-clean",
            "logging-infra": "collector-buffer-clean",
            "provider": "aosqe"
        },
        "name": "collector-buffer-clean"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "component": "collector-buffer-clean",
                "logging-infra": "collector-buffer-clean",
                "provider": "aosqe"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "component": "collector-buffer-clean",
                    "logging-infra": "collector-buffer-clean",
                    "provider": "aosqe"
                },
                "name": "collector-buffer-clean"
            },
            "spec": {
                "containers": [
                    {
                        "image": "quay.io/openshifttest/busybox@sha256:afe605d272837ce1732f390966166c2afff5391208ddd57de10942748694049d",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "collector-buffer-clean",
                        "securityContext": {
                            "privileged": true
                        },
                        "command": ["/bin/sh"],
                        "args": ["-c","rm -rf /var/lib/fluentd/*; rm -rf /var/log/*.pos;sleep 15s"],
                        "terminationMessagePath": "/dev/termination-log",
                        "terminationMessagePolicy": "File",
                        "volumeMounts": [
                            {
                                "mountPath": "/var/log",
                                "name": "varlog"
                            },
                            {
                                "mountPath": "/var/lib/fluentd",
                                "name": "filebufferstorage"
                            }
                        ]
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "nodeSelector": {
                    "kubernetes.io/os": "linux"
                },
                "restartPolicy": "Always",
                "schedulerName": "default-scheduler",
                "securityContext": {},
                "serviceAccount": "privileged-sa",
                "serviceAccountName": "privileged-sa",
                "terminationGracePeriodSeconds": 10,
                "tolerations": [
                   {
                        "effect": "NoSchedule",
                        "key": "node-role.kubernetes.io/master",
                        "operator": "Exists"
                    },
                    {
                        "effect": "NoSchedule",
                        "key": "node.kubernetes.io/disk-pressure",
                        "operator": "Exists"
                    }
                ],
                "volumes": [
                    {
                        "hostPath": {
                            "path": "/var/log",
                            "type": ""
                        },
                        "name": "varlog"
                    },
                    {
                        "hostPath": {
                            "path": "/var/lib/fluentd",
                            "type": ""
                        },
                        "name": "filebufferstorage"
                    }
                ]
            }
        }
    }
}
